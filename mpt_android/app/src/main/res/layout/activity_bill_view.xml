<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.notkink.mpt_android.BillViewActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/bill_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/image_border"
            tools:background="#00f" />

        <TextView
            tools:text="bill name"
            android:id="@+id/bill_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bill_view"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="45dp"
            android:layout_marginStart="68dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/edit"
            style="@style/myImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/delete"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_mode_edit"
            android:background="#80FFFFFF"/>

        <ImageView
            android:id="@+id/delete"
            style="@style/myImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_delete"
            android:background="#80FFFFFF"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/exirationDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/expirateDate"
            android:layout_alignParentStart="true"
            android:paddingLeft="0sp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingTop="10sp"
            tools:text="Twoja gwarancja wygaśnie za " />

        <TextView
            android:id="@+id/expirateDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:textColor="#FFFF4444"
            android:paddingLeft="0sp"
            android:layout_toRightOf="@id/exirationDateText"
            android:textSize="25sp"
            android:paddingTop="10sp"
            tools:text="2 miesiące" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_above="@+id/guaranteeDateIcon"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="45dp"
            android:layout_toStartOf="@+id/nameOfTheShop"
            android:background="@drawable/ic_shopping_cart" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/guaranteeDateIcon"
            android:layout_marginBottom="61dp"
            android:background="@drawable/ic_timelapse"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="411dp" />

        <ImageView
            android:id="@+id/guaranteeDateIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignTop="@+id/guaranteeDate"
            android:background="@drawable/ic_date_range"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="363dp" />

        <TextView
            android:id="@+id/nameOfTheShop"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_alignTop="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lato_light"

            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            tools:text="aa" />

        <TextView
            android:id="@+id/timeLeft"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/guaranteeDate"
            android:layout_alignTop="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lato_light"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            tools:text="aa" />

        <TextView
            android:id="@+id/guaranteeDate"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_above="@+id/timeLeft"
            android:layout_alignStart="@+id/nameOfTheShop"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato_light"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            tools:text="aa" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="20sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/timeLeft"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="20dp"
            android:text="Powrót"
            android:id="@+id/back_button"
            android:drawableStart="@drawable/ic_keyboard_backspace"
            tools:text="Powrót" />

    </RelativeLayout>


</RelativeLayout>

